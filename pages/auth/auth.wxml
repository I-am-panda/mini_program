<!--pages/auth/auth.wxml-->
<view class="container">
  <image class="userinfo-avatar" src="/static/img/logo.png" mode="cover"></image>
  <view class="title text-xxl">
    <text class="text-bold text-grey">欢迎使用</text>
  </view>
  <view class="title text-xl padding">
    <text class="text-cyan text-bold">华广修一修</text>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-olive round lg" bindtap="jumpRepair">
      <text class="text-white">维修人员</text>
    </button>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-cyan round lg" bindtap="jumpStudent">
      <text class="text-white">我是学生</text>
    </button>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-green round lg" bindtap="jumpLogin">
      <text class="text-white">我是管理</text>
    </button>
  </view>
  <view class="mini text-center padding" >
    <text class="text-gray text-df">华南理工大学广州学院</text>
  </view>
</view>
