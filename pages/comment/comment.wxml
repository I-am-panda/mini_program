<!--pages/Personal-Center/comment/comment.wxml-->
<view class='box'>
  <view class='logo'>
    <view class='image2'>
      <view class="cuIcon-edit text-white icon" style="font-size:60rpx;"></view>
    </view>
    <view class='text1'>
      <text>您的意见反馈是我成长的滋养!</text>
    </view>
  </view>
  <form bindsubmit='formclick'>
    <view style='margin-top:10px;'>
      <text class='font1'>联系方式</text>
      <view class="cu-form-group input1" style='margin-top:5rpx'>
        <input placeholder="手机或邮箱等联系方式" name='eamil' class='radius' maxlength="30"></input>
      </view>
    </view>
    <view class='font1'>
      <text>问题和意见(必填)</text>
    </view>
    <view class="cu-form-group  margin-top textarea1 " style='font-size:28rpx;'>
      <textarea placeholder="请描述您的问题或建议" name='suggest' maxlength="150" bindinput='inputs' style="margin-left:25rpx;color: #808080"></textarea>
      <view class="numposition">
        <text>{{wordnumber}}/150</text>
      </view>
    </view>
    <view class="flex flex-direction padding">
      <button class="cu-btn bg-blue round lg light" form-type='submit'>提交</button>
    </view>
  </form>
  <view class=" flex flex-direction padding">
    <button class="cu-btn bg-grey round lg light" bindtap="Back">返回</button>
  </view>
  <view class="text-center margin-top padding">
    <text class="text-gray text-df">华南理工大学广州学院</text>
  </view>
</view>